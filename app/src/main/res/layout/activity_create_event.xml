<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2f2f">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--MOOD ROSTER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mood_roster_title"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:text="@string/roster_title"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/emotion_indicator"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:letterSpacing="0.1"
                android:text="HAPPY"
                android:textColor="#fff"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mood_roster"
                android:layout_width="match_parent"
                android:layout_height="331dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never"/>

            <Button
                android:id="@+id/select_emoticon_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emoticon_choice_btn"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.3"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:background="@drawable/round"
                android:clickable="true"/>


        </LinearLayout>

        <!--OTHER MOODEVENT DETAILS-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".CreateEventActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--REASON-->
                <EditText
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:hint="Reason"
                    android:maxLength="20"
                    android:background="@drawable/edit_text_border"/>

                <!--SITUATION-->
                <TextView
                    android:id="@+id/social_situation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Social Situation"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:background="@drawable/edit_text_border"
                    android:clickable="true">
                </TextView>

                <!--IMAGE UPLOAD-->
                <ImageView
                    android:layout_gravity="center|center_vertical"
                    android:id="@+id/image_reason"
                    android:layout_height="500dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/temp_image_upload">
                </ImageView>

                <!--SET DATE AND TIME-->
                <TextView
                    android:id="@+id/date_and_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Set Date/Time"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:background="@drawable/edit_text_border"
                    android:clickable="true">
                </TextView>

                <!--SUBMIT BUTTON-->

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Location"
                    android:gravity="center"
                    android:textSize="24sp"
                    tools:text="Location" />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/createMapView"
                    android:layout_width="match_parent"
                    android:layout_height="258dp" />

                <Button
                    android:id="@+id/submit_button"
                    android:text="SUBMIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="10dp">
                </Button>

                <Button
                    android:id="@+id/cancel_button"
                    android:text="CANCEL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="10dp">
                </Button>


            </LinearLayout>
        </ScrollView>





    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>