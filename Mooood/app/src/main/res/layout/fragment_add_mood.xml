<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"><!--Change this accordingly to maintain layout consistency-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_add_mood_tv_date_header"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Date" />

        <EditText
            android:id="@+id/fragment_add_mood_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="2000-01-01"
            android:focusable="false"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_add_mood_tv_time_header"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Time" />

        <EditText
            android:id="@+id/fragment_add_mood_et_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_horizontal"
            android:focusable="false"
            android:text="00:00"
            android:inputType="time" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_add_mood_tv_emotional_state_header"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Emotional State" />

        <!--TODO: Ideally we should do this as a drop down list, I found a link explaining how:
        https://stackoverflow.com/questions/31052436/android-edittext-with-drop-down-list
        -->
        <EditText
            android:id="@+id/fragment_add_mood_et_emotional_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="Happy"
            android:gravity="center_horizontal"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_add_mood_tv_reason_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Reason"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fragment_add_mood_et_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:maxLength="20"
            android:text="Did good on midterm"
            android:gravity="center_horizontal"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_add_mood_tv_social_situation_header"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Situation" />

        <!--TODO: This should be a dropdown list -->
        <EditText
            android:id="@+id/fragment_add_mood_et_social_situation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:ems="10"
            android:maxLength="20"
            android:text="Alone"
            android:inputType="text" />

    </LinearLayout>
    <!--TODO: Need something to enter or retrieve location
    This is my old code for assignment 1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_header_add"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Comment" />

        <EditText
            android:id="@+id/comment_entry_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:maxLength="20"
            android:gravity="start|top"
            android:text=""
            android:inputType="textMultiLine" />

    </LinearLayout>
    -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1" />

        <Space
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>